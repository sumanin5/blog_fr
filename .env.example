# ==========================================
# 媒体文件配置
# ==========================================
MEDIA_ROOT=media_store
MEDIA_URL=http://localhost:8000/media/

BASE_URL = http://localhost:8000

# ==========================================
# API配置
# ==========================================

API_VERSION=v1
API_PREFIX=/api/v1
# ==========================================
# 数据库配置
# ==========================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blog_fr
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis
DATABASE_ECHO=False

# ==========================================
# 项目信息
# ==========================================
PROJECT_NAME="Blog FR"
STACK_NAME=blog-fr
DOMAIN=localhost

# 环境: development / staging / production
ENVIRONMENT=development

# ==========================================
# 后端配置
# ==========================================
# CORS 允许的源
# 本地开发: http://localhost,http://localhost:5173,http://localhost:3000
# 生产环境: https://yourdomain.com
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,http://localhost:3000"

# JWT 密钥（至少32位，生产环境必须修改）
# 生成随机密钥: openssl rand -hex 32
SECRET_KEY=changethis-please-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 初始超级用户
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# ==========================================
# Git Ops / 内容挂载配置 (必须与 Docker Volume 挂载一致)
# ==========================================
# 宿主机或容器内 Markdown 内容存储路径
CONTENT_DIR=/git_root/content
# 是否在同步时自动创建不存在的分类
GIT_AUTO_CREATE_CATEGORIES=True

# ==========================================
# Docker 用户权限配置 (Linux常用)
# ==========================================
UID=1000
GID=1000

# ==========================================
# 前端配置
# ==========================================
# 前端应用地址（用于 CORS、生成链接、ISR 刷新等）
FRONTEND_URL=http://localhost:3000

# Next.js API 基础 URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# 控制 Auth 登录入口显示 (true/false)
NEXT_PUBLIC_SHOW_AUTH_ENTRY=true
# Auth 门卫密码 (用于 /auth/gate 验证)
AUTH_GATE_SECRET=changethisregex

# ==========================================
# Next.js 缓存失效配置
# ==========================================
# Next.js 缓存失效 API 的密钥（生产环境必须修改）
# 生成随机密钥: openssl rand -hex 32
REVALIDATE_SECRET=changethis-please-use-openssl-rand-hex-32

# ==========================================
# 可选: 邮件配置（如需要）
# ==========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAILS_FROM_EMAIL=noreply@example.com
# SMTP_TLS=True
# SMTP_SSL=False

# ==========================================
# APM 监控与错误追踪 (Sentry)
# ==========================================
# 后端 Sentry 配置
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# 前端 Sentry 配置 (需要 NEXT_PUBLIC_ 前缀以在浏览器中访问)
NEXT_PUBLIC_SENTRY_DSN=

# 慢请求阈值（秒）
SLOW_REQUEST_THRESHOLD=1.0

# OpenTelemetry 分布式追踪（可选）
ENABLE_OPENTELEMETRY=false
OTEL_EXPORTER_ENDPOINT=http://localhost:4317


# ==========================================
# 测试配置
# ==========================================
# E2E 测试用管理员账号（用于清理测试数据）
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=changethis

# ==========================================
# Docker 镜像配置（如需推送到仓库）
# ==========================================
# DOCKER_IMAGE_BACKEND=your-registry/backend
# DOCKER_IMAGE_FRONTEND=your-registry/frontend
