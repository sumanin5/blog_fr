{
    "languages": {
        "TSX": {
            "language_servers": ["tailwindcss-language-server", "..."]
        },
        "TypeScript": {
            "language_servers": ["tailwindcss-language-server", "..."]
        },
        "CSS": {
            "language_servers": ["tailwindcss-language-server", "..."]
        }
    },
    "lsp": {
        "tailwindcss-language-server": {
            "settings": {
                "tailwindCSS": {
                    "experimental": {
                        "classRegex": [
                            [
                                "cva\\(([^]*?)\\}\\s*\\)",
                                "[\"'`]([^\"'`]*).*?[\"'`]"
                            ],
                            ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
                            ["clsx\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
                        ]
                    },
                    "includeLanguages": {
                        "typescriptreact": "html",
                        "typescript": "html",
                        "javascript": "html",
                        "javascriptreact": "html"
                    },
                    "files": {
                        "exclude": [
                            "**/.git/**",
                            "**/node_modules/**",
                            "**/dist/**"
                        ]
                    },
                    "rootFontSize": 16,
                    "showPixelEquivalents": true,
                    "validate": true,
                    "classAttributes": [
                        "class",
                        "className",
                        "ngClass",
                        "class:list"
                    ]
                }
            }
        }
    },
    "file_types": {
        "CSS": ["css"]
    }
}
